{
  "name": "i18n-talk",
  "version": "0.1.0",
  "description": "Using i18n in isomorphic react app",
  "main": "index.js",
  "author": "Brijesh",
  "license": "MIT",
  "scripts": {
    "webpack": "NODE_ENV=development webpack-dev-server --config src/configs/webpack.config.ts --hot --inline",
    "server": "NODE_ENV=development webpack --config src/configs/webpack.server.config.ts",
    "nodemon": "NODE_ENV=development nodemon lib/server/index.js -w src/**/*.*",
    "start": "yarn webpack & yarn server && node server/server.js",
    "build:server": "NODE_ENV=production webpack --config src/configs/webpack.server.config.ts -p",
    "build:client": "NODE_ENV=production webpack --config src/configs/webpack.config.ts -p",
    "build": "yarn build:server & yarn build:client"
  },
  "devDependencies": {
    "@types/debug": "4.1.2",
    "@types/i18next": "12.1.0",
    "@types/node": "11.9.4",
    "@types/react": "16.8.3",
    "@types/react-dom": "16.8.2",
    "@types/react-i18next": "8.1.0",
    "@types/react-router-dom": "4.3.1",
    "@types/webpack": "4.4.24",
    "@types/webpack-dev-server": "3.1.2",
    "@types/webpack-node-externals": "1.6.3",
    "css-loader": "2.1.0",
    "file-loader": "3.0.1",
    "ignore-loader": "0.1.2",
    "nodemon": "1.18.10",
    "style-loader": "0.23.1",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "typescript": "3.3.3",
    "webpack": "4.29.5",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "debug": "4.1.1",
    "express": "4.16.4",
    "i18next": "15.0.4",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-i18next": "10.1.2",
    "react-router-dom": "4.3.1"
  }
}
